<metal:block metal:use-macro="load: default_layout.pt" i18n:domain="app">
    <metal:slot fill-slot="jumbotron">
        <div class="jumbotron">
            <div class="container bg-danger">
                <h1 i18n:translate="">Database error</h1>
                <p i18n:translate="">Something bad happened with database</p>
            </div>
        </div>
    </metal:slot>

    <metal:slot fill-slot="content">
        <div class="row bg-warning">
            <div class="col-md-6">
                <h2 i18n:translate="">Database error</h2>
                <p>${message}</p>
            </div> <!-- col -->
        </div> <!-- row -->
    </metal:slot>
</metal:block>